<p id="notice"><%= notice %></p>

<h1>Listing Letters</h1>

<table>
  <thead>
    <tr>
      <th>Welcome</th>
      <th>Date</th>
      <th>Time1</th>
      <th>Time2</th>
      <th>Announcements</th>
      <th>Liturgy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @letters.each do |letter| %>
      <tr>
        <td><%= letter.welcome %></td>
        <td><%= letter.date %></td>
        <td><%= letter.time1 %></td>
        <td><%= letter.time2 %></td>
        <td><%= letter.announcements %></td>
        <td><%= letter.liturgy %></td>
        <td><%= link_to 'Show', letter %></td>
        <td><%= link_to 'Edit', edit_letter_path(letter) %></td>
        <td><%= link_to 'Destroy', letter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

